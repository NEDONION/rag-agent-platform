# ================================
# RAG Agent Platform - 环境变量配置
# ================================

# ================================
# 服务端口配置
# ================================
SERVER_PORT=8088
FRONTEND_PORT=3000

# ================================
# 数据库配置 (阿里云 RDS PostgreSQL)
# ================================
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=

# ================================
# RabbitMQ 配置
# ================================
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ================================
# S3 对象存储配置 (七牛云 KODO)
# ================================
S3_SECRET_ID=your_qiniu_access_key
S3_SECRET_KEY=your_qiniu_secret_key
S3_REGION=cn-south-1
S3_ENDPOINT=https://s3.cn-south-1.qiniucs.com
S3_BUCKET_NAME=your-bucket-name
S3_DOMAIN=https://your-bucket-name.s3.cn-south-1.qiniucs.com/

# ================================
# AI 模型配置 (硅基流动)
# ================================
SILICONFLOW_API_KEY=your_siliconflow_api_key
SILICONFLOW_API_URL_RERANK=https://api.siliconflow.com/v1/rerank
SILICONFLOW_MODEL_RERANK_MODEL=Qwen/Qwen3-Reranker-4B

# ================================
# 邮件服务配置 (SMTP)
# ================================
MAIL_SMTP_HOST=smtp.qq.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USERNAME=your_email@qq.com
MAIL_SMTP_PASSWORD=your_email_authorization_code

# ================================
# 前端环境变量（重要：必须配置为浏览器可访问的地址）
# ================================
# 本地开发直连后端（避免跨域配置冲突）
NEXT_PUBLIC_API_URL=http://localhost:8088/api
NEXT_PUBLIC_WS_URL=ws://localhost:8088/api
API_PROXY_BASE=http://localhost:8088

# ================================
# JVM 配置 (可选)
# ================================
JAVA_OPTS=-Xms2g -Xmx4g -XX:+UseG1GC -XX:MaxGCPauseMillis=200
